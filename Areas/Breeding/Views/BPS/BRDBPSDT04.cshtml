                                { 'data': 'BRDR_NO' },
                                { 'data': 'BRDR_ID' },
                                { 'data': 'REMARK' },
                                { 'data': 'ACTION' },
                            ]
                        })

                        if (data != null) {
                            for (data_Loop of data) {
                                if (data_Loop.ACTION == "Y") {
                                    modal_case = 1;
                                }
                                else if (data_Loop.ACTION == "N") {
                                    modal_case = 2;
                                    break;
                                }
                            }
                            if (modal_case == 2) { // Error
                                $("#btn_cancle").show();
                                $("#btn_ok_save").hide();
                            }
                            else { // Success
                                $("#btn_cancle").show();
                                $("#btn_ok_save").show();
                            }
                            $('#modal_brdrps').modal('show');
                            $("#modal_brdrps").last().addClass("in show");
                        }
                    }, 1000);
                },
                error: function (err) {
                    errorAlert.init();
                }
            });
        }
        else {
            $("#showMes").text("*Please select File !");
        }
    }

