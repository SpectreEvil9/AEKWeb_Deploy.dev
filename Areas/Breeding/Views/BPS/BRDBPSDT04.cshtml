            },
            error: function () {
                errorAlert.init();
            }
        });
    }

    function cancel_upload() {
        setTimeout(function () {
            Swal.fire({
                icon: "question",
                title: 'Do you want to cancel?',
                text: "Are you sure you want to cancel saving this data?",
                showCancelButton: true,
                confirmButtonText: 'Yes',
            }).then((result) => {
                if (result.isConfirmed) {
                    $('#modal_brdrps').modal('hide');
                    location.reload();
                }
            });
        }, 400);
    };
</script>
